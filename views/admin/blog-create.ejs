<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../views/partials/head') %>
</head>

<body>
    <%- include('../partials/nav.ejs') %>

        <div class="container mt-3">
            <div class="row">
                <div class="col-md-12 mt-3">
                    <form method="post">
                        <div class="row mb-3">
                            <label for="baslik" class="col-sm-2">Başlık</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="baslik" name="baslik">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="aciklama" class="col-sm-2">Açıklama</label>
                            <div class="col-sm-8">
                                <textarea name="aciklama" rows="6" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="resim" class="col-sm-2">Resim</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" id="resim" name="resim">
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label for="kategori" class="col-sm-2">Kategori</label>
                            <div class="col-sm-8">
                                <select name="kategori" id="kategori" class="form-select">
                                    <option value="-1" selected>Seçiniz</option>
                                    <% categories.forEach(category=> { %>
                                        <option value=<%=category.categoryid %>><%= category.name %>
                                        </option>
                                        <% }) %>
                                </select>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                                <div class="form-check">
                                    <input type="checkbox" name="anasayfa" class="form-check-input">
                                    <label for="anasayfa" class="form-check-label">Anasayfa</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                                <div class="form-check">
                                    <input type="checkbox" name="onay" class="form-check-input">
                                    <label for="onay" class="form-check-label">Onay</label>
                                </div>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-sm-8 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
</body>

</html>